<div class="col-5">
  <h3>Trade Details</h2>
    <table>

    <tr>
      <th>Trade ID</th>
      <th>Direction</th>
      <th>SIZE</th>
      <th>Product</th>
      <th>Execution Price</th>
      <th>Current Px (Underlying)</th>
      <th>Option Strategy</th>
      <th>Strategy Execution Px</th>
      <th>Current Px (Strategy)</th>
      <th>Trade Date</th>
      <th>P/L</th>
    </tr>
    <tr>
      <td><%= @trade.id %>. </td>
      <td><%= @trade.direction %> </td>
      <td><%= @trade.size %> </td>
      <td><%= @trade.product %> </td>
      <td><%= @trade.price %> </td>
      <td><%= @trade.current_price %></td>
      <td><%= @trade.option_strategy %></td>
      <td><%= @trade.strategy_price %></td>
      <td><%= @trade.strategy_current_px %></td>
      <td><%= @trade.trade_date %> </td>
      <td></td>
    </tr>
    <br />
  </table>
  <%= link_to "Edit", trade_path(@trade) %>

  <%= link_to "Delete", @trade, method: :delete, data: { confirm: "Are you sure you want to delete this trade?" } %>
  <br />
  <h3><%= link_to "All trades", trades_path %></h3>
  <h3><%= link_to "All open positions", positions_path %></h3>
</div>
