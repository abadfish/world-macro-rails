<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#tradeModal">New Trade</button>

<div id="tradeModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

<!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add or Edit Trade</h4>
      </div>

      <div class="modal-body">
        <form class="form-horizontal">
          <div class="control-group">
            <%= form_for Trade.new do |f| %>
            <div class="col-sm-4">
              <%= f.label :status %>
              <%= f.select(:status, options_for_select([["open", "open"], ["closed", "closed"]])) %>
            </div><br />
            <div class="col-sm-4">
              <%= f.text_field :trade_date, placeholder: "Trade Date" %><br />
            </div>
            <div class="col-sm-4">
              <%= f.text_field :direction, placeholder: "Direction" %><br />
            </div>
            <div class="col-sm-4">
              <%= f.text_field :size, placeholder: "size" %><br />
            </div>
            <div class="col-sm-4">
              <%= f.text_field :product, placeholder: "product" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :price, placeholder: "price" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :current_price, placeholder: "Current Price" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :target, placeholder: "target" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :stop, placeholder: "stop" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :risk, placeholder: "risk" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :target_profit, placeholder: "target profit" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :realized, placeholder: "realized" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :category, placeholder: "category" %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :product_type, placeholder: "Product Type" %>
            </div>

          <br />
          <%= f.submit %>
        <% end %>
      </div>
      </form
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<div class="col-2">

</div>
