
<section class="col-md-12">

  <h2>Current Portfolio</h2>
  <div class="col-md-6">
    <h3><% if user_signed_in? && current_user.admin? %>
      <%= link_to "Add New trade", new_trade_path %>
      <% end %></h3>
  </div>
  <div class="col-md-2">
    <%= form_tag trades_upload_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import Trades File" %><br />
    <% end %>
  </div>

  <div class="col-md-12">
    <table id="openTrades" class="row-border stripe compact">
      <thead>
        <tr><th>Trade Date</th><th>Direction</th><th>SIZE</th> <th>Product</th> <th>Execution Price</th> <th>Current Price</th> <th>Target</th> <th>Stop</th> <th>Risk *</th> <th>Target Profit *</th> <th>Realized *</th>  <th>Category</th><th>Type</th></tr>
      </thead>
      <tbody>
      <% @trades.each do |trade| %>
        <% if trade.status == "Open" %>
        <tr>
          <td><%=trade.trade_date %></td><td><%=trade.direction %></td><td><%=trade.size %></td><td><%=trade.product %></td><td><%=trade.price %></td><td><%=trade.current_price %></td><td><%=trade.target %></td><td><%=trade.stop %></td><td><%=trade.risk %> </td><td><%=trade.target_profit %></td><td><%=trade.realized %></td><td><%=trade.category %></td><td><%=trade.product_type %></td>

        </tr>

          <% end %>
          <% end %>
      </tbody>
    </table>
  </div>
</section>
