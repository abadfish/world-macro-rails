
<%= form_for(:upload, url: '/uploads', html: { multipart: true }) do |f| %>

  <% if Upload.new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(Upload.new.errors.count, "error") %> prohibited this upload from being saved:</h2>

      <ul>
        <% Upload.new.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.label :uploaded_file, t('.upload_charts') %>
    <%= f.file_field :uploaded_file, multiple: true, name: 'upload[uploaded_file]' %>
     <%= f.submit %>
  </div>
<% end %>

<% # jquery upload template # %>
<script id="template-upload" type="text/x-tmpl"><div class="upload">{%=o.name%}<div class="progress"><div class="progress-bar bar" style="width: 0%"></div></div></div></script>
