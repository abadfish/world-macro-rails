<div class="wrapper clearfix">


  <div class="col-6 ml20">
    <h2><%= @post.title %></h2>
    <p><%= @post.content %></p>

    <% if !@post.content_2.nil? %>
      <p><%= @post.content_2 %></p>
    <% end %>

    <p><a class="twitter-share-button" href="https://twitter.com/intent/tweet">Tweet</a></p>
    <%= link_to image_tag(@post.image.url(:med)), @post.image.url %>
    <br />
    <% if user_signed_in? && current_user.admin? || current_user.vip? %>
      <p><%= link_to "Edit", edit_post_path(@post) %>
      <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %> Tag: <%= @post.tag_name %></p>
    <% end %>



    <%= render partial:'comments/form', local: {post: @post, comment: @comment} %>

    <h4>Comments:</h4>
    <% @post.comments.each do |comment| %>
      <p><%= comment.content %></p>
    <% end %>
  </div>
  <div class="col-1">
    <br />
      <% @posts.each do |post| %>
      <h4><%= link_to post.title, post_path %></h4>
      <% end %>
  </div>
</div>
