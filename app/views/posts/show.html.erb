<div class="col-2">
  <h2><%= @post.title %></h2>
  <p><%= @post.content %></p>
  <p><%= @post.post_date %></p>
  <%= link_to image_tag(@post.image.url(:med)), @post.image.url %>
  <br />
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
  <% end %>
</div>
<div class="col-1">
  <br />
  <% @posts.each do |post| %>
  <h3><%= link_to post.title, post_path %></h3>
  <% end %>
</div>
