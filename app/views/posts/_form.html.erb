<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :summary %>
  <%= f.text_field :summary %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :post_date %>
  <%= f.text_field :post_date %>

  <%= f.label :image %>
  <%= f.hidden_field :picture_cache %>
  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>

<!-- Configure Cloudinary jQuery plugin -->
<%= cloudinary_js_config %>
