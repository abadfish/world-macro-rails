<div class="col-2">


  <%= form_for @post, html: { multipart: true } do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
    <%= f.label :summary %><br />
    <%= f.text_area :summary %><br />
    <%= f.label :content %><br />
    <%= f.text_area :content %><br />
    <%= f.label :post_date %><br />
    <%= f.text_field :post_date %><br />

    <%= f.label "Attach Chart: " %><br />
    <%= f.file_field :image %>
    <%= f.submit %><br />
  <% end %>
