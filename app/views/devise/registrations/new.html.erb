<div class="col-md-12">
  <div class="col-md-4">
    <div class="pricing-table pt-2 text-center feature bordered">
      <h5 class="uppercase">Pro</h5>
        <span class="price amount">$800</span>
        <p class="lead">Per Month</p>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Get Pro Access</button>
        <ul>
          <li><strong>Unlimited</strong> access to trade ideas</li>
          <li><strong>Unlimited</strong> access to Darren's portfolio</li>
          <li><strong>Unlimited</strong> direct emails of all portfolio updates</li>
          <li><strong>Unlimited</strong> email alerts of technical indicators</li>
          <li><strong>Unlimited</strong> ability to request custom trades</li>
          <li><strong>Unlimited</strong> direct communication with Darren</li>
        </ul>
        <div id="myModal" class="modal fade" role="dialog">
          <div class="modal-dialog">
        <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Pro Access</h4>
              </div>

              <div class="modal-body">
                <div class="feature bordered text-center">

                <h4 class="uppercase">Sign up</h4><br />

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  <%= f.hidden_field :stripe_card_token %>
                  <%= f.hidden_field :plan_id, value: @plans[0].id %>
                  <div class="mb0">
                    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
                  </div>

                  <div class="field">
                    <% if @minimum_password_length %>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 characters minimum)" %>
                  </div>
                  <br />

                  <div class="field">
                    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
                  </div>
                  <br />
                    <% if @user.stripe_card_token.present? %>
                        Credit Card is on File
                    <% else %>
                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                             data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                             data-description="Pro Subscription"
                             data-amount=<%= (  @plans[0]["amount"]) %>
                             data-locale="auto"></script>

                    <% end %>
                  <% end %>
                  <br />
                  <%= render "devise/shared/links" %>
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div><!-- End of Pro Subscription form-->

